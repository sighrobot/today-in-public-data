.source-filter {
    display: flex;
    flex-direction: column;
    overflow: hidden;
    width: 100%;

    .source-list {
        overflow-y: auto;
    }

    > input {
        flex-shrink: 0;
        line-height: normal;
        padding: 0 7.5px;
        height: 30px;
        font-size: 12px;
        outline: 0;
        font-family: inherit;
        border: none;
        font-weight: 300;
        background: #f5f5f5;
        margin: 0 7.5px;
        margin-bottom: 7.5px;

        &::placeholder {
            color: #97999a;
        }
    }

    label {
        align-items: center;
        cursor: pointer;
        display: flex;
        font-size: 12px;
        line-height: normal;
        padding: 0 15px;
        user-select: none;
        height: 30px;
        transition: 200ms ease background;

        &:hover {
            opacity: 0.75;
        }

        &.source-filter-hidden {
            background: none !important;
            color: #16161d !important;
        }

        input[type="checkbox"] {
            cursor: pointer;
            display: none;
        }

        span {
            line-height: 1;
        }
    }
}
