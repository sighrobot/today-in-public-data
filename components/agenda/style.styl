.agenda-item {
    text-decoration: none;
    position: absolute;
    left: 35px;
    right: 0;
    border-radius: 2px;
    color: white;
    font-size: 13px;
    line-height: 1.3;
    border: 1px solid #e5e5e5;
    border-radius:5px;
    transition: 200ms ease left, right;
    padding: 2px 4px;

    &:hover {
        z-index: 9999 !important;
        left: 35px !important;
        right: 0 !important;
    }

    a {
        text-decoration: none;
    }
}

h3 {
    font-size: 15px;
    padding: 0 8px;
    line-height: 50px;
    margin: 0;
}

h4 {
    margin: 0;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-weight: 300;
}

p {
    font-size:10px;
    font-weight: 700;
    margin: 0;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

aside {
    margin-bottom: 15px;
    padding-left: 10px;
    padding-right: 10px;
}
