.calendar-wrap {
    display: flex;
    flex-direction: column;
    overflow: hidden;
    width: 100%;
}

.planner {
    display: flex;
    flex-direction: column;
    overflow-y: auto;
    overflow-x: auto;
    position: relative;
    width: 100%;
    height: 100%;

     > hr {
         height: 2px;
         flex-shrink: 0;
         border: none;
         margin: 0;
     }
}

.planner-header {
    align-items: center;
    display: flex;
    padding: 0 0 0 15px;
    height: 43px;
    position: relative;
    z-index: 99999;
    flex-shrink: 0;

    h2 {
        font-size: 14px;
        font-weight: 300;

        strong {
            font-weight: 500;
        }
    }

    > div {
        align-self: stretch;
        margin-left: auto;
        display: flex;
        align-items: center;

        button {
            align-self: stretch;
            background: none;
            border: none;
            color: #16161d;
            font-family: inherit;
            font-size: 14px;
            font-weight: 300;
            margin: 0;
            outline: 0;
            transition: 200ms ease background;
            width: 43px;

            border-left: 1px solid #ccc;

            &:hover {
                cursor: pointer;

                &:not(.active) {
                    background: #f7f7f7;
                }
            }

            &.active {
                background: #f5f5f5;
                color: #16161d;

                &:hover {
                    color: inherit;
                }
            }

            svg {
                transform: translateY(4px);
            }

            &:nth-child(2) {
                svg {
                    height: 20px;
                }
            }
        }
    }
}

.planner-headers {
    align-items: center;
    box-shadow: 0 2px 2px rgba(0, 0, 0, 0.2);
    background: #f5f5f5;
    display: flex;
    flex-shrink: 0;
    height: 30px;
    width: 100%;
    position: relative;
    z-index: 9999;

    h3 {
        flex-shrink: 0;
        font-size: 12px;
        font-weight: 500;
        margin: 0;
        padding-left: 35px;

        span {
            font-weight: 300;
        }
    }
}

.planner-agendas {
    display: flex;
    overflow-y: auto;
    overflow-x: hidden;
    width: 100%;

    .planner-section {
        flex-shrink: 0;
        position: relative;
        height: 100%;
    }
}

