.planner {
    display: flex;
    overflow-x: auto;
    width: 100%;
}

.planner-section {
    flex-shrink: 0;
    width: 360px;
    position: relative;

    h3 {
        position: sticky;
        top: 0;
        background: #f5f5f5;
    }
}

@media screen and (max-width: 550px) {
    .planner-section {
        width: 70vw;
    }
}
